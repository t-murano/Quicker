        .load
          i.fa.fa-spinner.fa-spin.fa-3x.load-icon
        #messagesDiv
    footer
      ul
        li
          a(href='https://github.com/jinmayamashita/simple-login-chat')
            i.fa.fa-github.fa-3x(aria-hidden='true')
        li
          a(href='https://twitter.com/jinmayamashita')
